{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "baseUrl": "../",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "../shared/**/*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 